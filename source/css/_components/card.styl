.hty- {
  &card {
    position: relative;
    display: flex;
    // background-color: var(--hty-theme-bgcolor, #fff);
    the-transition();
    the-box-shadow();
    flex-direction: column;
    box-sizing: border-box;
    background-color: #eee;

    &__actions {
      display: flex;
      flex-direction: row;
      align-items: center;
      box-sizing: border-box;
      min-height: 3rem;
      border-top: 1px solid #eee;
    }
  }
}