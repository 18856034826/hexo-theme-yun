#sidebar
  position: fixed
  top: 0
  left: -320px
  z-index: 11
  overflow-y: auto
  width: 320px
  height: 100%
  background: linear-gradient(to right, #ffffff 0%, rgba(255, 255, 255, 0.85) 100%)
  text-align: center
  transition-property: box-shadow
  the-transition()
  the-box-shadow()

  .sidebar-panel
    padding: 20px 10px
    display: none

  .sidebar-panel-active
    display: block

  .links-of-author
    display: flex
    flex-wrap: wrap
    justify-content: center
    .icon
      width: 1.5rem
      height: 1.5rem

    &-item
      line-height: 1
      font-size: 0.9rem
  
  .site-info
    color: $dark

  .links-of-friend
    display: flex
    justify-content: center
    .icon
      width: 2rem
      height: 2rem

.hts-drawer-scrim
  background-color: rgba(0, 0, 0, 0.3)
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  the-transition()
  z-index: 1