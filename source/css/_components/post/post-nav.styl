.post-nav
  display: table
  border-top: 1px solid $light-gray
  border-bottom: 1px solid $light-gray
  padding: 1rem 0
  width: 100%

.post-nav-divider
  display: table-cell
  width: 10%
  text-align: center

  .social-share
    padding: 2px 3px
    border-radius: 2px
    text-align: center

.post-nav-item
  display: table-cell
  width: 45%

.post-nav-prev
  text-align: left

.post-nav-next
  text-align: right