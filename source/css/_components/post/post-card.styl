.post-card {
  box-shadow: 0 2px 5px rgba(black, 0.2);
  background-color: white;
  max-width: 900px;
  margin: 0 auto;

  &:hover {
    box-shadow: 0 5px 20px rgba(white, 0.2);
  }

  &-header {
    padding-top: 0.5rem;
  }

  &-excerpt, &-excerpt p {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: left;
  }

  &-content {
    padding: 0.5rem 1rem;
  }

  &-title {
    margin: 0;
  }

  &__actions {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  &-tag {
    display: flex;
    flex-grow: 1;
    justify-content: flex-end;
  }

  &-tag, &-category {
    font-size: 0.8rem;

    span {
      color: $dark;

      &:hover {
        color: $colors.primary;
      }
    }

    .icon {
      width: 0.8rem;
      height: 0.8rem;
    }
  }

  &-readmore {
    margin: 1rem auto;

    button {
      border-radius: 0;
    }
  }

  .yuque-button {
    --hty-theme-primary: $color-yuque;

    &:hover {
      background-color: alpha($green, 0.9);
    }
  }


  .yuque {
    &-link {
      color: $color-yuque;
    }
  }
}
