#reward-container
  padding: 10px 0
  margin: 20px auto
  width: 90%
  text-align: center

#reward-button
  display: inline-block
  text-align: center
  cursor: pointer
  padding: 0.5rem
  border-color: $colors.danger
  color: $colors.danger
  border-radius: 100%
  width: 1.5rem
  height: 1.5rem
  text-align: center

  .icon
    width: 1.5rem
    height: 1.5rem
    vertical-align: top
    margin-top: -0.05rem

#reward-button:hover
  background-color: $colors.danger
  color: $white

#qr
  padding-top: 20px

  a
    border: 0

  img
    width: 180px
    max-width: 100%
    display: inline-block
    margin: 1rem 1rem 0 1rem
    padding: 5px
    border: 1px solid $light-gray
    border-radius: 5px
    the-transition()
    the-box-shadow()

  .icon
    width: 1.5rem
    height: 1.5rem