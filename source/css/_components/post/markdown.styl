.post-markdown
  line-height: 1.8

  h1
    font-size: 2.5em
    border-bottom: 1px solid rgba($gray, 0.5)
  h2
    font-size: 2.2em
    border-bottom: 1px solid rgba($gray, 0.5)
  h3
    font-size: 1.9em
    border-bottom: 1px dotted rgba($gray, 0.5)
  h4
    font-size: 1.6em
  h5
    font-size: 1.3em
  h6
    font-size: 1.03em

  h1,h2,h3,h4,h5,h6
    cursor: pointer
    transition: all 0.2s ease-out
    &:before
      content: "# "
      color: $gray
      transition: all 0.2s ease-out

    &:hover

      &:before
        color: $colors.primary

  pre, code
    font-family: consolas, Menlo, "PingFang SC", "Microsoft YaHei", monospace
    font-size: 14px
    line-height: 1.6

  code
    overflow-wrap: break-word
    word-wrap: break-word
    padding: 3px 6px
    color: $dark
    background: #eee
    border-radius: 3px

  blockquote
    margin: 0
    padding: 0 1rem
    color: $dark
    border-left: .25rem solid $gray
  
  hr
    margin: 44px 0
    height: 2px
    border: none
    background-color: #ddd
    background-image: repeating-linear-gradient(-45deg, #fff, #fff 4px, transparent 4px, transparent 8px)

  img
    padding: 5px
    margin: 5px
    max-width: 100%
    border: 1px solid $light-gray
    transition: all 0.2s
    border-radius: 5px

    &:hover
      box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.1)