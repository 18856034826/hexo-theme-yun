$char-size-1 = 1.5rem
$line-color = $black
$char-color = $black
$char-bg-color = $white

.banner
  display: flex
  flex-direction: column
  align-items: center

.vertical-line
  &-top,
  &-bottom
    display: flex
    background-color: $line-color
    width: 1px
    height: 50vh

.char
  background-color: alpha($char-bg-color, 0.5)
  the-transition()
  &:hover
    color: $char-bg-color
    background-color: alpha($char-color, 0.5)

  &-left,
  &-right
    display: flex
    color: $char-color
    line-height: 1
    font-family: 'ZCOOL XiaoWei'

  &-left
    border-left: 1px solid $line-color
    border-right: 0px solid alpha($purple, 0.1)

  &-right
    border-left: 0px solid alpha($purple, 0.1)
    border-right: 1px solid $line-color