.page-number-basic {
  display: inline-block;
  width: 2rem;
  height: 2rem;
  margin: 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  background-color: alpha($white, 0.5);
  transition: 0.2s;
}

.pagination {
  text-align: center;

  .space {
    @extend .page-number-basic;
  }

  .prev, .next, .page-number {
    @extend .page-number-basic;
    cursor: pointer;
    color: $dark;
    text-decoration: none;

    &:hover {
      background: lighten($colors.primary, 90%);
    }

    &:active {
      background: lighten($colors.primary, 20%);
      color: $white;
    }

    &.current {
      background: $colors.primary;
      color: $white;
      cursor: default;
      // box-shadow: 0 0 10px rgba(0, 0, 0, 0.1) inset
    }
  }
}