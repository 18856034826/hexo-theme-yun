#site-header
  position: fixed
  width: 100%
  z-index: 9
  top: -64px
  background: alpha($white, 0.9)
  box-shadow: 0 5px 10px -5px alpha($dark, 0.1)
  height: 64px
  the-transition()

  &.fixed
    position: fixed
    top: -64px
    z-index: 10
    background: alpha($white, 1)
    box-shadow: 0 4px 10px -4px alpha($dark, 0.1)
    transition: transform 0.2s ease-in-out, opacity 0.2s ease-in-out

  &.visible
    transform: translate3d(0, 100%, 0)

.menu
  text-align: center
  padding: 20px
  margin: 0
  line-height: 1

.menu-item
  display: inline-block
  margin: 0 10px
  padding: 0
  list-style: none
  line-height: 1
  .icon
    width: 1.5rem
    height: 1.5rem

.menu-link
  color: $colors.primary
  text-decoration: none

  &:hover
    color: $orange