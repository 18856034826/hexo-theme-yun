.link-item
  display: inline-block
  text-align: center
  line-height: 1.5

  a
    display: inline-block

  .link
    &-avatar
      width: 5rem
      height: 5rem
      border-radius: 50%
      padding: 4px
      background-color: #fff
      border: 1px solid #ddd
      transition: .5s

      &:hover
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1)

    &-name
      margin-top: 0px
      padding-top: 0px
      font-size: .9rem
      color: $dark