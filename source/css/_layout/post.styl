#post
  padding: 10px

.post-header
  font-size: 2rem
  text-align: center

  .post-title
    margin: 0
    padding: 10px
    .post-title-link
      position: relative

      &::before
        content: ""
        position: absolute
        width: 100%
        height: 2px
        bottom: 0
        left: 0
        background-color: $colors.primary
        visibility: hidden
        transform: scaleX(0)
        the-transition()

      &:hover::before
        visibility: visible
        transform: scaleX(1)

.post-meta
  font-size: 14px
  color: $dark

  .icon
    margin-bottom: -1px

  .post-sticky-flag
    color: $colors.warning

.post-meta-item-icon
  display: inline-block

.post-meta-divider
  height: 25px
  color: $dark
  margin: 0 0.5rem

.post-eof
  margin: 50px auto
  width: 50%
  height: 1px
  background: $blue
  opacity: 0.1

.post-body
  padding: 0 10px

  .post-excerpt
    padding: 0 20px

  +mobile()
    .post-excerpt
      padding: 0

  .post-content
    padding: 20px 0px
  
  // .post-content, .post-excerpt

.post-copyright
  font-size: 0.9rem
  margin: 2rem 0
  padding: 0.5rem 1rem
  border-left: 3px solid #f8722a
  background-color: $light
  list-style: none

a.fancybox
  outline: none

  &:focus
    outline: none
  
  display: inline-block
  width: 100%
  text-align: center
  text-decoration: none

  .image-caption
    color: $gray
    font-size: 0.8rem
    line-height: 1
    margin-bottom: 20px

.read-more
  .icon
    width: 2.5rem
    height: 2.5rem

// recent-post
.recent-post-item
  margin-top: 15px
  margin-bottom: 20px

// post card
.post-card
  &-content
    padding: 1rem

  &-title
    margin: 0

  &__actions
    padding-left: 1rem
    padding-right: 1rem