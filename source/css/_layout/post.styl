#post
  padding: 10px

.post-meta
  font-size: 14px
  color: $dark

  .icon
    margin-bottom: -1px

  .post-sticky-flag
    color: $colors.warning

.post-meta-item-icon
  display: inline-block

.post-meta-divider
  height: 25px
  color: $dark
  margin: 0 0.5rem

.post-eof
  margin: 50px auto
  width: 50%
  height: 1px
  background: $blue
  opacity: 0.1

.post-body
  padding: 0 10px

  .post-excerpt
    padding: 0 20px

  +mobile()
    .post-excerpt
      padding: 0

  .post-content
    padding: 20px 0px
  
  // .post-content, .post-excerpt

.post-copyright
  font-size: 0.9rem
  margin: 2rem 0
  padding: 0.5rem 1rem
  border-left: 3px solid #f8722a
  background-color: $light
  list-style: none

a.fancybox
  outline: none

  &:focus
    outline: none
  
  display: inline-block
  width: 100%
  text-align: center
  text-decoration: none

  .image-caption
    color: $gray
    font-size: 0.8rem
    line-height: 1
    margin-bottom: 20px

.post-comment
  padding: 1rem