.post-header
  font-size: 2rem
  text-align: center
  vertical-align: top

  .post-title
    .post-title-link
      position: relative

      &::before
        content: ""
        position: absolute
        width: 100%
        height: 2px
        bottom: 0
        left: 0
        background-color: $colors.primary
        visibility: hidden
        transform: scaleX(0)
        the-transition()

      &:hover::before
        visibility: visible
        transform: scaleX(1)

.post-meta
  font-size: 14px
  color: $gray

  .post-category, .post-tag
    display: inline-block

.post-meta-item-icon
  display: inline-block

.post-meta-divider
  height: 25px
  color: $gray
  margin: 0 0.5rem

.post-button
  margin: 20px

.post-eof
  margin: 50px auto
  width: 50%
  height: 1px
  background: $blue
  opacity: 0.1

.post-excerpt
  padding: 0 50px

.post-body
  padding: 0 20px
  