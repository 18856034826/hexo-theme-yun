@import 'reset.styl';

:root {
  if (hexo-config('mode') == 'light') {
    --hty-bg-color: #f5f5f5;
  } else {
    --hty-bg-color: #141516;
  }

  --hty-primary: $colors.primary;
}

html {
  scroll-behavior: smooth;
  box-sizing: border-box;
}

body {
  background-color: var(--hty-bg-color, #f5f5f5);
}
