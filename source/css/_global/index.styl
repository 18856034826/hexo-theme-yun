@import 'reset.styl';

:root {
  --mdc-layout-grid-margin-desktop: 10rem;
  // --mdc-layout-grid-gutter-desktop: 2px;
}

html {
  scroll-behavior: smooth;
}

body {
  if (hexo-config('mode') == 'dark') {
    --hts-theme-bgcolor: #141516;
    // --hts-theme-textcolor: #fff;
    --hts-card-bgcolor: #141516;
  } else {
    --hts-theme-bgcolor: #f9f9f9;
  }
  --mdc-theme-primary: $colors.primary;
  --hts-theme-primary: $colors.primary;

  background-color: var(--hts-theme-bgcolor, #fff);
  // color: var(--hts-theme-textcolor, #000);
}