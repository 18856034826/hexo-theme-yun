if theme.ui.bg_image.enable
  style.
    body::before {
      content: '';
      position: fixed;
      width: 100%;
      height: 100%;
      z-index: -1;
      opacity: 0.2;
      background-image: url(#{theme.ui.bg_image.url});
      background-size: cover;
      background-position:center;
      background-repeat:no-repeat;
      background-attachment:fixed;
    }