section#recent-posts.mdc-layout-grid
  .mdc-layout-grid__inner
    each post in page.posts.data
      .mdc-layout-grid__cell.mdc-layout-grid__cell--span-6-desktop.mdc-layout-grid__cell--span-12-tablet
        article.mdc-card.hts-card.recent-post-item(itemscope, itemtype='http://schema.org/Article')
          include ../_partial/post/post-schema.pug
          .post-card-content.mdc-card__primary-action.mdc-ripple-surface(tabindex='0')
            .post-card__primary.text-center
              .post-header
                include ../_partial/post/post-title.pug
                include ../_partial/post/post-meta.pug
              p.post-card__subtitle!=post.description
                
          .mdc-card__actions.post-card__actions
            .mdc-card__action-buttons
              .post-card-category
                span.post-meta-item-icon
                  +icon('icon-folder-line')
                |  
                if post.categories && post.categories.length && theme.post_meta.categories
                  for category, index in post.categories.data
                    span
                      a(href=url_for(category.path))
                        span(itemprop='text')=category.name

                    - var category_length = post.categories.length
                    if category_length > 1 && index != category_length - 1
                        |  > 
            .mdc-card__action-icons
              if post.tags && post.tags.length && theme.post_meta.tags
                .post-card-tag
                    for tag in post.tags.data
                      |  
                      span.post-meta-item-icon
                        +icon('icon-price-tag-3-line')
                        |  
                        a(href=url_for(tag.path, rel='tag'))=tag.name + ' '
              else
                span.post-meta-item-icon
                  +icon('icon-price-tag-3-line')