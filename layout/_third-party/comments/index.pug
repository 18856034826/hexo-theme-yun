.post-comment
  if theme.comment.enable
    .comment-tooltip.text-center
      each tip in theme.comment.tips
        span!=tip
        br
      a#github-issues.hty-button.hty-button--raised(href=`https://github.com/${theme.github_issues.username}/${theme.github_issues.repository}/issues?q=${theme.github_issues.filters}+${post.title}`)!="GitHub Issues"

  if theme.valine && theme.valine.enable
    include valine.pug