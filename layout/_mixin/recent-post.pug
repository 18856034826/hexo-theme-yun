mixin recent_post_item(post)
  article(itemscope, itemtype='http://schema.org/Article')
    .post-block
      include ../_partial/post/post-schema.pug

      header.post-header
        include ../_partial/post/post-title.pug
        include ../_partial/post/post-meta.pug
     
      section.post-body
        .post-excerpt(class='markdown-body', itemprop='articleBody')
          if post.excerpt
            != post.excerpt
        .post-button(class='text-center')
          a.btn(href=url_for(post.path))=__('post.read_more')
    
      footer.post-footer
        .post-eof
